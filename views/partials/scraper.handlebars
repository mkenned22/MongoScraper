<h1>Results:</h1>
{{#each this}}
        <div class="panel panel-primary">
            <form action="/scrape" method="post">
                <div class="panel-body">
                <h4 id="title{{article_num}}">{{title}}</h4>
            </div>
            <div class="panel-footer" id="desc{{article_num}}">
                {{desc}}
            </div>
                {{#if article_num}}<button type="submit" formmethod="post" id={{article_num}} class="saveButton">Save Article</button>{{/if}}
                {{#if _id}}
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">
                        
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Modal Header</h4>
                            </div>
                            <div class="modal-body">
                            <label>Enter a note for this article:</label><br>
                            <textarea id="noteTextarea">Some text in the modal.</textarea>
                            </div>
                            <div class="modal-footer">
                            <button class="addNoteButton" id={{_id}} type="button" class="btn btn-default" type="submit">Submit</button>
                            </div>
                        </div>
                        
                        </div>
                    </div>

                    <button class="deleteButton" formmethod="post" id={{_id}}>Delete Article</button>
                    <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" id={{_id}}>Add Note</button>
                {{/if}}
            </form>
        </div>
{{/each}}
